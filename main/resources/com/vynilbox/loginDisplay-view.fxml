                  <Circle fill="#1f93ff00" layoutX="111.0" layoutY="43.0" radius="25.0" stroke="BLACK" strokeType="INSIDE" />
                  <Ellipse fill="#ffd000" layoutX="160.0" layoutY="23.0" radiusX="6.0" radiusY="9.0" stroke="#ffffff00" strokeType="INSIDE" />
                  <CubicCurve controlX1="-50.0" controlX2="50.0" controlY1="-100.0" controlY2="100.0" endX="48.0" endY="-18.0" fill="#ffd000" layoutX="111.0" layoutY="33.0" startX="35.5" startY="4.0" stroke="TRANSPARENT" />
                  <Label layoutX="160.0" layoutY="32.0" prefHeight="23.0" prefWidth="77.0" text="inyl BOX" textFill="#ffd000">
                     <font>
                        <Font name="Forte" size="18.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
         </children>
      </GridPane>
   </children>
</VBox>
