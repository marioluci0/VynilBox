<VBox alignment="CENTER" prefHeight="550.0" prefWidth="500.0" spacing="20.0" style="-fx-background-color: #222222;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vynilbox.controllers.LoginDisplayController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <GridPane prefHeight="720.0" prefWidth="1280.0">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="175.0" minWidth="10.0" prefWidth="98.0" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="222.0" minWidth="10.0" prefWidth="222.0" />
          <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="175.0" minWidth="10.0" prefWidth="98.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="167.0" minHeight="10.0" prefHeight="166.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="388.0" minHeight="10.0" prefHeight="373.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="221.0" minHeight="10.0" prefHeight="140.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="lblLogin" text="LOGIN" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <font>
                  <Font name="Rockwell Extra Bold" size="18.0" />
               </font></Label>
            <Label fx:id="lblEmail" text="E-mail" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets top="30.0" />
               </GridPane.margin>
               <font>
                  <Font name="Rockwell Extra Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="txtEmailLogin" prefHeight="25.0" prefWidth="187.0" promptText="E-mail" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets top="50.0" />
               </GridPane.margin>
            </TextField>
            <Label fx:id="lblPassword" text="Senha" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets top="100.0" />
               </GridPane.margin>
               <font>
                  <Font name="Rockwell Extra Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="lblNaoPossuiLogin" text="Nao possui login?" textFill="#c6c6c6" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
               <GridPane.margin>
                  <Insets bottom="50.0" right="82.5" />
               </GridPane.margin>
            </Label>
            <PasswordField fx:id="txtPasswordLogin" promptText="Password" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets top="120.0" />
               </GridPane.margin>
            </PasswordField>
            <Hyperlink fx:id="linkRegister" onAction="#onLinkRegisterClick" text="Cadastre-se" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM">
               <GridPane.margin>
                  <Insets bottom="46.0" left="82.5" />
               </GridPane.margin>
            </Hyperlink>
            <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Entrar" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets top="170.0" />
               </GridPane.margin>
               <font>
                  <Font name="Rockwell Extra Bold" size="12.0" />
               </font>
            </Button>
            <Label fx:id="lblInvalidLogin" prefHeight="17.0" prefWidth="227.0" textFill="RED" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets top="200.0" />
               </GridPane.margin>
            </Label>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
               <children>
                  <Circle fill="#2c2c2c" layoutX="111.0" layoutY="43.0" radius="34.0" stroke="BLACK" strokeType="INSIDE" />
                  <Circle fill="#545454" layoutX="111.0" layoutY="43.0" radius="13.0" stroke="BLACK" strokeType="INSIDE" />
                  <Circle fill="WHITE" layoutX="111.0" layoutY="43.0" radius="9.0" stroke="BLACK" strokeType="INSIDE" />
                  <Circle fill="#1f93ff00" layoutX="111.0" layoutY="43.0" radius="28.0" stroke="BLACK" strokeType="INSIDE" />
